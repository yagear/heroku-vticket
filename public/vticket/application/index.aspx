<%@ Page Language="C#" MasterPageFile="~/Master/osaka.front.master"%>

<asp:Content ID="indexMainContent" ContentPlaceHolderID="MainContent" Runat="Server">
<div id="main-contents" >
    <div class="panel panel-default">
	    <div class="panel-heading">
		    お申し込み頂く商品
	    </div>
	    <div class="panel-body" id="application-item">
            <img src="/vticket/images/items/<%= Request.QueryString["cd"] %>_1.jpg" alt="<%= Request.QueryString["cd"] %>">
            <span class="supplement">モノメニュー</span>
            デモサイト用確認メニュー
            <span class="supplement">必要枚数：2 枚</span>
            <span class="supplement">商品コード：<%= Request.QueryString["cd"] %></span>
	    </div>
    </div>

    <div class="panel panel-default">
	    <div class="panel-heading">
		    配送先住所
            <a href="/vticket/deliverysetting/" class="setting_button">修正する</a>
	    </div>
	    <div class="panel-body">
            カタログ　ジロウ 様<br>
		    〒 134-0088 東京都江戸川区髙﨑㈱７丁目１－２ コライオンズマンション西葛西１５０３号<br>
            090-0000-0000<br>
	    </div>
    </div>

<div id="confirm-sm" class="modal fade in" tabindex="-1" role="dialog" style="display: none; padding-right: 17px;">
   <div class="modal-dialog modal-lg" role="document">
     <div class="modal-content">
       <div class="modal-header bg-primary">
         <h4 class="modal-title">
           <i class="glyphicon glyphicon-question-sign"></i> お申込みを確定します、よろしいですか
         </h4>
       </div>
       <div class="modal-body">選択されている商品、お届け先に間違いが無いかご確認の上「はい、申し込みます」をクリックすると、お申込みを確定します。</div>
       <div class="modal-footer">
         <button type="button" class="btn btn-default" data-dismiss="modal">いいえ</button>
         <button class="btn btn-primary" onclick="location.href='/vticket/application_completed/'">はい、申し込みます</button>
       </div>
     </div>
   </div>
</div>

<button type="button" data-toggle="modal" data-target="#confirm-sm" id="to_apply">申し込む</button>

</div>
</asp:Content>